@page "/AddUser"
@using System.Net.Http
@inject HttpClient Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@using Bochacha.Domain
<body style="background-color:red">
    <div class="form-container">
        <input @bind="newType" placeholder="я" /><p></p>

        <button class="custom-button" @onclick="AddUSER">Добавить п</button>
    </div>
</body>
@code {
    private string? newType;
    private Guid newid;

    [Parameter]
    public EventCallback<string> OnAddUser { get; set; }

    private async Task AddUSER()
    {

        var user = new USER
            {
                id = newid,
                type = newType

            };
        newid = Guid.NewGuid();
        newType = "SUS";
        await Http.PostAsJsonAsync("https://localhost:5032/api/USER", user);
        await OnAddUser.InvokeAsync("OK");
    }
}